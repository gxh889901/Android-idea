<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="boardTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/boardTextSize</item>
        <item name="android:textColor">@color/boardTextColor</item>
    </style>
    <style name="firstClassTitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/firstClassSize</item>
        <item name="android:textColor">@color/firstClassTextColor</item>
    </style>

</resources>
